# Environment Configuration
DISCOVERY_ENV=development  # Options: development, staging, production

# Scrapyd Authentication
SCRAPYD_USERNAME=admin
SCRAPYD_PASSWORD=your-secure-password

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=discovery_${DISCOVERY_ENV}

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/${DISCOVERY_ENV}  # Separate VHOSTs per environment

# RabbitMQ Exchanges
RABBITMQ_EXCHANGE_JOBS=discovery.${DISCOVERY_ENV}.jobs
RABBITMQ_EXCHANGE_RESULTS=discovery.${DISCOVERY_ENV}.results
RABBITMQ_EXCHANGE_EVENTS=discovery.${DISCOVERY_ENV}.events

# Webhook Security Settings
WEBHOOK_SECRET=your-secret-key-here
MAX_REQUESTS_PER_MINUTE=60
REQUEST_TIMEOUT=30

# Scrapyd Settings
SCRAPYD_URL=http://localhost:6800
PROJECT_NAME=Discovery
DEFAULT_SPIDER=quick

# Performance settings
DOWNLOAD_DELAY=1
CONCURRENT_REQUESTS=16
CONCURRENT_REQUESTS_PER_DOMAIN=8
AUTOTHROTTLE_ENABLED=true
AUTOTHROTTLE_START_DELAY=1
AUTOTHROTTLE_MAX_DELAY=10
AUTOTHROTTLE_TARGET_CONCURRENCY=2.0

# Security settings
ROBOTSTXT_OBEY=true
CONCURRENT_REQUESTS_PER_IP=8
COOKIES_ENABLED=false  # Enable only if needed
USER_AGENT=Discovery Bot (+https://your-domain.com/bot.html)  # Replace with your bot info

# Logging
LOG_LEVEL=INFO
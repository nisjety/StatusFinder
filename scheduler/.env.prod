# Scheduler configuration
NODE_ENV=production
LOG_LEVEL=INFO

# MongoDB Configuration
MONGO_URI=mongodb://${MONGO_USERNAME}:${MONGO_PASSWORD}@mongo:27017/discoverybot

# Redis Configuration
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0

# RabbitMQ Configuration
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=${RABBITMQ_USER}
RABBITMQ_PASSWORD=${RABBITMQ_PASSWORD}
RABBITMQ_VHOST=/
RABBITMQ_EXCHANGE=discovery-jobs
RABBITMQ_QUEUE=crawl-requests

# Scheduler Configuration
JOB_CLEANUP_INTERVAL=3600  # 1 hour in seconds
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=300  # 5 minutes

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9091